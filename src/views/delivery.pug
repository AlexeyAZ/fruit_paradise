extends templates/layout

block vars
	- var title = 'Фруторай - доставка'

block content
	section.sec.delivery
		div.container
			div.lines-container.delivery__title
				p.title.title_m.title_light.ta-center.lines.
					Доставка
			div.description
				div.description__img-container
					img(src="img/delivery-img.png", alt="").description__img
				div.description__list-container
					p.description__list-title.text.text_l.
						Возможные способы доставки
					ul.description__list
						li.description__list-item.
							Бесплатная доставка по Анапе
						li.description__list-item.
							Экспресс доставка в день заказа - 250 руб
						li.description__list-item.
							Доставка ранним утром или поздним вечером
